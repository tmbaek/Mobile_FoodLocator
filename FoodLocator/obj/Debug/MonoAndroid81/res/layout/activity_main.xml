<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffef9a9a">
	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<com.facebook.login.widget.ProfilePictureView
			android:id="@+id/ImgPro"
			android:layout_toLeftOf="@+id/fblogin"
			android.layout_marginRight="10dp"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginTop="10dp" />
		<com.facebook.login.widget.LoginButton
			android:id="@+id/fblogin"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp" />
	</RelativeLayout>
	<TextView
		android:text="Welcome First Name"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/TxtFirstname"
		android:layout_centerHorizontal="true"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="10dp"
		android:textSize="25" />
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:text="Special Occasion"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="0.0dp"
				android:id="@+id/textView1"
				android:gravity="center"
				android:textSize="20" />
			<TextView
				android:text="For Brunch"
				android:layout_width="150.0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="40dp"
				android:layout_marginLeft="47dp"
				android:layout_marginRight="0.0dp"
				android:id="@+id/textView1"
				android:gravity="center"
				android:textSize="20" />
		</LinearLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp">
			<ImageView
				android:src="@drawable/Special_Occasion"
				android:layout_width="150dp"
				android:layout_height="150dp"
				android:scaleType="centerCrop"
				android:id="@+id/imageView1"
				android:textAlignment="center"
				android:textDirection="rtl"
				android:contextClickable="true" />
			<ImageView
				android:src="@drawable/brunch"
				android:layout_alignParentRight="true"
				android:layout_width="150dp"
				android:layout_height="150dp"
				android:scaleType="centerCrop"
				android:id="@+id/imageView2" />
		</RelativeLayout>
	</RelativeLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:text="Romantic"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="0.0dp"
			android:id="@+id/textView1"
			android:gravity="center"
			android:textSize="20" />
		<TextView
			android:text="For Groups"
			android:layout_width="150.0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:layout_marginLeft="47dp"
			android:layout_marginRight="0.0dp"
			android:id="@+id/textView1"
			android:gravity="center"
			android:textSize="20" />
	</LinearLayout>
	<RelativeLayout
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="200.0dp"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:id="@+id/relativeLayout1"
		<ImageView
			android:src="@drawable/romantic"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:scaleType="centerCrop"
			android:id="@+id/imageView1"
			android:textAlignment="center"
			android:textDirection="rtl"
			android:contextClickable="true" />
		<ImageView
			android:src="@drawable/groups"
			android:layout_alignParentRight="true"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:scaleType="centerCrop"
			android:id="@+id/imageView2" />
	</RelativeLayout>

	</LinearLayout>

</LinearLayout>  